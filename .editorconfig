# 规范代码
root = true

[*]
# indent_style ：缩进风格，可选配置有 tab 和 space
indent_style = space
# indent_size ：缩进大小，可设定为 1-8 的数字，比如设定为 2 ，那就是缩进 2 个空格。
indent_size = 2
# charset ：编码格式，通常都是选 utf-8 。
charset = utf-8
# trim_trailing_whitespace ：去除多余的空格
trim_trailing_whitespace = true
# insert_final_newline ：在尾部插入一行
insert_final_newline = true
# end_of_line ：换行符，可选配置有 lf ，cr ，crlf
end_of_line = lf

[*.md]
trim_trailing_whitespace = false
